<div class="videoessenceTwitterPost wm-style social-post-item-wrap">
    <div class="social-embed-item tweet">
        <div class="social-embed-header">
            <a target="_blank" href="https://twitter.com/{{screen_name}}" class="social-icon-post"></a>
            <div class="post-desc">
                <div class="author">
                    <a target="_blank" href="https://twitter.com/{{screen_name}}" class="author-link">{{user}}</a><br>
                    <a target="_blank" href="https://twitter.com/{{screen_name}}" class="profile-link">@{{screen_name}}</a>
                </div>
                <div class="time-ago">{{created_at}}</div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="social-embed-content">
			{{text}}
        </div>
    </div>
	<div class="btn-wrapper">
		{{#if saved}}
			<button type="submit" class="remove-btn btn-post-embed {{#unless onhover}}nonhover{{/unless}}"></button>
        {{else}}
        	<button type="submit" class="embed-btn btn-post-embed"></button>
        {{/if}}
	</div>
</div>