<div class="image-gallery-item view-library">
<div class="img-wrap {{#if error}}error{{/if}}">
	<div class="valign">
		<div class="img">
			{{#unless uploaded}}{{#unless error}}
				<span class="ajax-image-loader"></span>
			{{/unless}}{{/unless}}
			<img src="{{#if preview}}{{preview}}{{else}}{{path}}{{/if}}" data-path="{{path}}" alt="{{name}}" title="{{name}}" class="{{#unless uploaded}}img-blur{{/unless}}">
		</div>
		{{#unless uploaded}}{{#unless error}}
			<div class="upload-progress">
				<span style="width:{{progress}}%;"></span>
			</div>
		{{/unless}}{{/unless}}
	</div>
</div>
<div class="img-desc {{#unless uploaded}}uploading{{/unless}} {{#if error}}error{{/if}}">
	{{#if uploaded}}
		<p class="t">{{name}}</p>
		<p class="d">{{loaded_date}}</p>
	{{else}}
		{{#unless error}}
			<p class="t">{{name}}</p>
			<p class="uploading-status">Uploading <span>{{progress}}</span>%...</p>
			<span class="app-btn-round min gray cancel cancel-upload"></span>
		{{else}}
			<p class="t">{{name}}</p>
			<p class="uploading-status">{{errorText}}</p>
		{{/unless}}
	{{/if}}
</div>
</div>
