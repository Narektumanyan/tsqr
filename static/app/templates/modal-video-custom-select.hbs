<h4>Select a ROI campaign</h4>
<div class="row">
    <div class="col-md-4 column menu-tabs ">
        {{#each model.types}}
            <label class="tab_label">
                <input class="tab_radio" type="radio" name="tab" value="{{@key}}">
                {{title}}
            </label>
        {{/each}}
        <input type="button" class="btn customize_button" id="customize" value="Customize">
    </div>

    <div class="popup-content col-md-8 column pull-right">
        <div class="campaign_content">
            <span>Sample preview</span>
            {{#each model.types}}
                <div class="campaign-preview hide-on-select" id="{{@key}}">
                    <img src="{{img}}" height="220" alt="">
                </div>
            {{/each}}
        </div>
    </div>

</div>
