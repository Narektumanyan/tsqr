<div class="video-container {{type}} {{#if saved}} gray{{/if}}">
    <div class="thumbnail-wrapper">
        <div class="video-frame">
            <span class="icon-play"></span>
            <img src="{{image}}" class="image-view" />
            <div class="duration-video">
                <div class="background-opa">
                </div>

                <div class="duration-text">
                    {{duration}}
                </div>
            </div>
        </div>
        <a class="to-add-video {{#if saved}} added{{/if}}"></a>
    </div>
    <div class="video-description">
        <h3 class="lockup-title">
            <a href="{{url}}" title="{{title}}">{{title}}</a>
        </h3>

        <div class="channel-link">
            From <a href="{{channel_url}}" title="{{channel_title}}">{{channel_title}}</a>
        </div>
        <div class="video-detail">
            {{formatCommDelimiter view_count}} views &bull; {{moment from=published_at}}
        </div>
